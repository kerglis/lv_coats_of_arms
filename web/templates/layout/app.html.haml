!!!
%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", :"http-equiv" => "Content-Type"}
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", :"http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    %title Hello LvCoatsOfArms!
    %link{href: "#{static_path(@conn, "/css/app.css")}", rel: "stylesheet"}
  %body
    .container
      %p.alert.alert-info{role: "alert"}= get_flash(@conn, :info)
      %p.alert.alert-danger{role: "alert"}= get_flash(@conn, :error)
      %main{role: "main"}
        = render @view_module, @view_template, assigns
        = render LvCoatsOfArms.SharedView, "toolbar.html", active_tab: @active_tab, conn: @conn

    %script{src: "#{static_path(@conn, "/js/app.js")}"}
